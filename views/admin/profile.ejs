<main>
	<%- include('../partials/adminSidebar') %>
	
	<div id="main-wrapper">
		
		<div class="bg-white1 shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Profile</h5>
		</div>
		
		<form action="" method="" class="w-75 border ms-3 my-3 p-4 bg-white1 rounded-2 shadow" style="min-width: 400px;">
			
			<div class="row">
				<div class="col-sm-6 mb-4">
					<label for="user-name" class="form-label">User Name</label>
					<input type="text" name="admin[userName]" class="form-control" id="first-name" placeholder="User name" value="<%= currentUser.userName %>" required>
				</div>
			</div>
			
			<div class="mb-4">
				<label for="email" class="form-label">Email</label>
				<input type="email" id="email" class="form-control" value="<%= currentUser.email %>" disabled>
			</div>
			
			<!-- <button type="submit" class="btn w-75 d-block m-auto mt-4">Update</button> -->

		</form>	
	</div>
</main>