<main>
	<%- include('../partials/userSidebar') %>
	
	<div id="main-wrapper">
		<span class="px-2 me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
		<div class="text-center bor">
		<h4 id="score">Score = 0</h4>
		<div id="wordContainer">
			<span id="colorWord" style="color : orange">Black</span>
		</div>
		<input type="text" id="userInput" placeholder="Enter Color of the Word">
		<button id="door-3-btn" disabled>Next</button>
		<br>
		<p id="timer" class="timer"></p>
		<button id="start" class="btn">Start</button>
		<form action="/<%= currentUser.userName %>/add/data/game/3" method="POST">
        <p id="result">Your Result is <input type='text' class='g3-result text-center form-control' value="<%= currentUser.gameScore[2]? currentUser.gameScore[2] : 0 %>" disabled> correct answers.</p>
        <div class="text-center">
            <input type="hidden" name="score" id="g3-data-score" value="<%= currentUser.gameScore[2]? currentUser.gameScore[2] : 0 %>">
            <button id="g3-submit" type="submit" class="btn" disabled>Submit</button>
        </div>
		</form>
	</div>
	</div>
</main>